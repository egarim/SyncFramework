@inject ISnackbar Snackbar

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3 mb-n1" />
            Edit
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField Value="@Person.Id.ToString()" Label="ID" ReadOnly="true" />
        <MudTextField @bind-Value="@Person.FirstName" Label="First Name"  />
        <MudTextField @bind-Value="@Person.LastName" Label="Last Name"  />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="UpdatePerson">Close</MudButton>
    </DialogActions>
</MudDialog>
